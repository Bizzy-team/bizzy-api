{
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "env": {
        "node": true,
        "es6": true
    },
    "plugins": [
        "prettier"
    ],
    "ignorePatterns": [
        "*.png",
        "*.json",
        "*.html",
        "*.yml"
    ],
    "rules": {
        "prettier/prettier": 1,
        "no-unused-expressions": [
            "error",
            {
                "allowShortCircuit": true,
                "allowTernary": true
            }
        ],
        "max-lines": [
            "warn",
            {
                "max": 200,
                "skipBlankLines": true,
                "skipComments": true
            }
        ],
        "no-else-return": [
            "error",
            {
                "allowElseIf": true
            }
        ],
        "max-lines-per-function": [
            "warn",
            20
        ],
        "complexity": [
            "warn",
            5
        ],
        "max-nested-callbacks": [
            "warn",
            2
        ],
        "max-depth": [
            "warn",
            3
        ],
        "no-underscore-dangle": 0,
        "no-console": 2,
        "import/no-unresolved": 0,
        "import/no-absolute-path": 0,
        "import/no-extraneous-dependencies": 0
    }
}